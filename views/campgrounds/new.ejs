<%-include("../partials/header.ejs")%>
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" name="campground[name]" required="required">
        </div>
        <div class="form-group">
            <label>Image-Url</label>
            <input class="form-control" type="text" name="campground[image]" required="required">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control" type="text" name="campground[price]" required="required">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" name="campground[description]" required="required"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
<%-include("../partials/footer.ejs")%>