<%-include("../partials/header.ejs")%>
    <div class="jumbotron">
            <h1 class="display-4 text-info">Editing Campground-<%=camp.name%></h1>
    </div>
    <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" name="campground[name]" required="required" value="<%=camp.name%>">
        </div>
        <div class="form-group">
            <label>Image-Url</label>
            <input class="form-control" type="text" name="campground[image]" required="required" value="<%=camp.image%>">
        </div>
        <div class="form-group">
                <label>Price</label>
                <input class="form-control" type="text" name="campground[price]" required="required" value="<%=camp.price%>">
            </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" name="campground[description]" required="required" ><%=camp.description%></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
<%-include("../partials/footer.ejs")%>