        <div class="form-group">
            <label>Username</label>
            <input class="form-control linput"  name="username" placeholder="Username" >
        </div>
        <div class="form-group">
            <label>Password</label>
            <input  class="form-control linput"  type="password" name="password" placeholder="Password">
